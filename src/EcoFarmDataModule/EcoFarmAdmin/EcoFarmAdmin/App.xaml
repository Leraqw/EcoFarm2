<Application x:Class="EcoFarmAdmin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Windows/MainWindow.xaml"
             xmlns:vm="clr-namespace:EcoFarmAdmin.ViewModels">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style TargetType="TextBox" x:Key="EditableField" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="IsEnabled"
                    Value="{Binding RelativeSource = {RelativeSource Mode = FindAncestor, AncestorType = Window}, Path = DataContext.Selected}" />
        </Style>

    </Application.Resources>
</Application>